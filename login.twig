{% extends "base.twig" %}

{% block template_content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <form class="form" method="post">
                    {% if login_error %}
                        <div class="alert alert-danger" role="alert"> {{ login_error }}</div>
                    {% endif %}
                    <div class="form-group">
                        <label class="sr-only">Username</label>
                        <input class="form-control" type="text" name="username" id="username" placeholder="Username" value="{{ username }}"/>
                    </div>
                    <div class="form-group">
                        <label class="sr-only">Password</label>
                        <input class="form-control" type="password" name="password" id="password" placeholder="Password"/>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="persist_session" id="persist_session" {% if persist_session %} checked {% endif %}/> Remember Me
                        </label>
                    </div>
                    <div class="clearfix"></div>

                    <button class="btn btn-success pull-right" type="submit">Login</button>
                    {% if redirect_url %}<input type="hidden" name="redirect_url" value="{{ redirect_url }}"/>{% endif %}
                </form>
                <br /><br /><br /><br />
            </div>
        </div>
    </div>
{% endblock %}
